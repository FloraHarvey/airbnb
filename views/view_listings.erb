

<h1>Current listings</h1>

<form action="/">
  <input type="date" name="date"></input>
  <input type="submit" value="See Available Spaces"></input>
</form>


<ul class="listings">
  <% @spaces.each do |space| %>
    <li class="space-listing">
      <a target="_blank" href="/space?id=<%= space.id %>">
        <img class="listing-img" src="<%= space.url %>">
      </a>
      <div class="space-details">
        <a href="/space?id=<%= space.id %>"><%= space.name %></a>
        <%= space.description %>
        <%= space.price %>
      </div>
    </li>
  <% end %>
</ul>
